# API Keys
RENDER_OPENAI_API_KEY=your_openai_api_key_here
# Optional: Fallback OpenAI API Key for local development
OPENAI_API_KEY=your_local_openai_api_key_here

# Database
DATABASE_URL=your_database_url_here

# Authentication
RENDER_JWT_SECRET=your_jwt_secret_here
# Optional: Fallback JWT secret for local development
JWT_SECRET=your_local_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# Services
REDIS_URL=your_redis_url_here

# Port Configuration
# Frontend runs on PORT (default 3000)
# Backend runs on BACKEND_PORT (default 3001)
BACKEND_PORT=3001
FRONTEND_PORT=3000

# API Configuration
# For local development
NEXT_PUBLIC_API_URL=http://localhost:3001
# For production (replace with your backend URL)
# NEXT_PUBLIC_API_URL=https://your-backend-api.onrender.com
